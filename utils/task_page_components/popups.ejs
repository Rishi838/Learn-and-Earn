                <input type="password" id="login_password" placeholder="Password">
              </div>
              <p class="error" id="login_pass_error"></p>
              <div class="inputBox">
                <input id="login" class="popup_btn" value="Login">
                <div class="loader" id="load1">
                  <div class="circle"></div>
                  <div class="circle"></div>
                  <div class="circle"></div>
                  <div class="circle"></div>
                  <div class="circle"></div>
                </div>

              </div>
              <p class="error" id="login_credentials_error"></p>
              <p class="forget">Forget password ? <a href="#">Click here</a></p>
              <p class="forget">Don't have an account ? <a id="signup_on_login">Sign up</a></p>
            </form>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
